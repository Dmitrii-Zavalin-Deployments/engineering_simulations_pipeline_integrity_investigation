{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/flow_data.schema.json",
  "title": "Flow Data",
  "type": "object",
  "required": [
    "fluid_properties",
    "initial_conditions",
    "simulation_parameters",
    "model_properties"
  ],
  "properties": {
    "fluid_properties": {
      "type": "object",
      "required": ["density", "viscosity"],
      "properties": {
        "density": { "type": "number" },
        "viscosity": { "type": "number" }
      },
      "additionalProperties": false
    },
    "initial_conditions": {
      "type": "object",
      "required": ["initial_velocity", "initial_pressure"],
      "properties": {
        "initial_velocity": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "initial_pressure": { "type": "number" }
      },
      "additionalProperties": false
    },
    "simulation_parameters": {
      "type": "object",
      "required": ["time_step", "total_time", "output_interval"],
      "properties": {
        "time_step": { "type": "number" },
        "total_time": { "type": "number" },
        "output_interval": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "model_properties": {
      "type": "object",
      "required": ["default_resolution", "flow_region"],
      "properties": {
        "default_resolution": { "type": "integer", "minimum": 1 },
        "flow_region": { "type": "string", "enum": ["internal", "external"] }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}



