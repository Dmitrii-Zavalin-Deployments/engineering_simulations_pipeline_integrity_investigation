{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/geometry_masking_gmsh.schema.json",
  "title": "Geometry Masking (GMSH)",
  "type": "object",
  "required": [
    "geometry_mask_flat",
    "geometry_mask_shape",
    "mask_encoding",
    "flattening_order"
  ],
  "properties": {
    "geometry_mask_flat": {
      "type": "array",
      "items": {
        "type": "integer",
        "enum": [0, 1]
      },
      "minItems": 1
    },
    "geometry_mask_shape": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1
      },
      "minItems": 3,
      "maxItems": 3
    },
    "mask_encoding": {
      "type": "object",
      "required": ["fluid", "solid"],
      "properties": {
        "fluid": { "type": "integer", "enum": [1] },
        "solid": { "type": "integer", "enum": [0] }
      },
      "additionalProperties": false
    },
    "flattening_order": {
      "type": "string",
      "enum": ["x-major", "y-major", "z-major"]
    }
  },
  "additionalProperties": false
}



