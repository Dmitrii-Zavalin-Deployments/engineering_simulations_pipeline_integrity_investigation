{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/boundary_conditions_gmsh.schema.json",
  "title": "Boundary Conditions (GMSH)",
  "type": "object",
  "required": [
    "x_min", "x_max",
    "y_min", "y_max",
    "z_min", "z_max",
    "faces", "type",
    "apply_faces", "apply_to",
    "pressure", "velocity",
    "no_slip"
  ],
  "properties": {
    "x_min": { "type": "string" },
    "x_max": { "type": "string" },
    "y_min": { "type": "string" },
    "y_max": { "type": "string" },
    "z_min": { "type": "string" },
    "z_max": { "type": "string" },
    "faces": {
      "type": "array",
      "items": { "type": "integer", "minimum": 0 }
    },
    "type": {
      "type": "string",
      "enum": ["dirichlet", "neumann", "robin"]
    },
    "apply_faces": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["x_min", "x_max", "y_min", "y_max", "z_min", "z_max"]
      }
    },
    "apply_to": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["velocity", "pressure"]
      }
    },
    "pressure": { "type": "number" },
    "velocity": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },
    "no_slip": { "type": "boolean" }
  },
  "additionalProperties": false
}



