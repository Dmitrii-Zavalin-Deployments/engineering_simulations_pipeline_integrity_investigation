{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fluid Simulation Input Schema",
  "type": "object",
  "required": ["mesh", "boundary_conditions", "fluid_properties", "simulation_parameters"],
  "properties": {
    "mesh": {
      "type": "object",
      "required": ["nodes", "edges", "faces", "volumes", "boundary_faces"],
      "properties": {
        "nodes": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of mesh nodes"
        },
        "edges": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of edges in the mesh"
        },
        "faces": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of mesh faces"
        },
        "volumes": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of mesh volumes"
        },
        "boundary_faces": {
          "type": "array",
          "description": "List of boundary faces and their geometry",
          "items": {
            "type": "object",
            "required": ["face_id", "type", "nodes"],
            "properties": {
              "face_id": {
                "type": "integer",
                "description": "Unique identifier for the boundary face"
              },
              "type": {
                "type": "string",
                "enum": ["inlet", "outlet", "wall"],
                "description": "Physical boundary type of this face"
              },
              "nodes": {
                "type": "object",
                "description": "Map of node IDs to 3D coordinates",
                "patternProperties": {
                  "^[0-9]+$": {
                    "type": "array",
                    "items": { "type": "number" },
                    "minItems": 3,
                    "maxItems": 3,
                    "description": "3D coordinates for a single node"
                  }
                },
                "minProperties": 1,
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },

    "boundary_conditions": {
      "type": "object",
      "required": ["inlet", "outlet", "wall"],
      "properties": {
        "inlet": {
          "type": "object",
          "required": ["faces", "velocity", "pressure"],
          "properties": {
            "faces": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "Face IDs designated as inlet surfaces",
              "minItems": 1
            },
            "velocity": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 3,
              "maxItems": 3,
              "description": "Velocity vector [Ux, Uy, Uz] at inlet (m/s)"
            },
            "pressure": {
              "type": "number",
              "description": "Absolute inlet pressure in Pascals"
            }
          },
          "additionalProperties": false
        },
        "outlet": {
          "type": "object",
          "required": ["faces", "pressure"],
          "properties": {
            "faces": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "Face IDs designated as outlet surfaces",
              "minItems": 1
            },
            "pressure": {
              "type": "number",
              "description": "Static pressure applied at the outlet (Pa)"
            }
          },
          "additionalProperties": false
        },
        "wall": {
          "type": "object",
          "required": ["faces", "no_slip"],
          "properties": {
            "faces": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "Face IDs designated as walls",
              "minItems": 1
            },
            "no_slip": {
              "type": "boolean",
              "description": "If true, enforces a zero-velocity boundary"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "fluid_properties": {
      "type": "object",
      "required": ["density", "viscosity"],
      "properties": {
        "density": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Fluid density (kg/m³)"
        },
        "viscosity": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Dynamic viscosity (Pa·s)"
        }
      },
      "additionalProperties": false
    },

    "simulation_parameters": {
      "type": "object",
      "required": ["time_step", "total_time", "solver"],
      "properties": {
        "time_step": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Simulation time step (s)"
        },
        "total_time": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Total simulation time (s)"
        },
        "solver": {
          "type": "string",
          "enum": ["explicit", "implicit"],
          "description": "Time integration scheme used"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}



