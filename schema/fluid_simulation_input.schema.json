{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/fluid_simulation_input.schema.json",
  "title": "Fluid Simulation Input",
  "type": "object",
  "required": [
    "domain_definition",
    "fluid_properties",
    "initial_conditions",
    "simulation_parameters",
    "boundary_conditions",
    "geometry_definition"
  ],
  "properties": {
    "domain_definition": {
      "type": "object",
      "required": ["min_x", "max_x", "min_y", "max_y", "min_z", "max_z", "nx", "ny", "nz"],
      "properties": {
        "min_x": { "type": "number" },
        "max_x": { "type": "number" },
        "min_y": { "type": "number" },
        "max_y": { "type": "number" },
        "min_z": { "type": "number" },
        "max_z": { "type": "number" },
        "nx": { "type": "integer", "minimum": 1 },
        "ny": { "type": "integer", "minimum": 1 },
        "nz": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "fluid_properties": {
      "type": "object",
      "required": ["density", "viscosity"],
      "properties": {
        "density": { "type": "number" },
        "viscosity": { "type": "number" }
      },
      "additionalProperties": false
    },
    "initial_conditions": {
      "type": "object",
      "required": ["initial_velocity", "initial_pressure"],
      "properties": {
        "initial_velocity": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "initial_pressure": { "type": "number" }
      },
      "additionalProperties": false
    },
    "simulation_parameters": {
      "type": "object",
      "required": ["time_step", "total_time", "output_interval"],
      "properties": {
        "time_step": { "type": "number" },
        "total_time": { "type": "number" },
        "output_interval": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "boundary_conditions": {
      "type": "object",
      "required": [
        "x_min", "x_max", "y_min", "y_max", "z_min", "z_max",
        "faces", "type", "apply_faces", "apply_to",
        "pressure", "velocity", "no_slip"
      ],
      "properties": {
        "x_min": { "type": "string" },
        "x_max": { "type": "string" },
        "y_min": { "type": "string" },
        "y_max": { "type": "string" },
        "z_min": { "type": "string" },
        "z_max": { "type": "string" },
        "faces": {
          "type": "array",
          "items": { "type": "integer", "minimum": 0 }
        },
        "type": {
          "type": "string",
          "enum": ["dirichlet", "neumann", "robin"]
        },
        "apply_faces": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["x_min", "x_max", "y_min", "y_max", "z_min", "z_max"]
          }
        },
        "apply_to": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["velocity", "pressure"]
          }
        },
        "pressure": { "type": "number" },
        "velocity": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "no_slip": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "geometry_definition": {
      "type": "object",
      "required": ["geometry_mask_flat", "geometry_mask_shape", "mask_encoding", "flattening_order"],
      "properties": {
        "geometry_mask_flat": {
          "type": "array",
          "items": {
            "type": "integer",
            "enum": [0, 1]
          },
          "minItems": 1
        },
        "geometry_mask_shape": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1
          },
          "minItems": 3,
          "maxItems": 3
        },
        "mask_encoding": {
          "type": "object",
          "required": ["fluid", "solid"],
          "properties": {
            "fluid": { "type": "integer", "enum": [1] },
            "solid": { "type": "integer", "enum": [0] }
          },
          "additionalProperties": false
        },
        "flattening_order": {
          "type": "string",
          "enum": ["x-major", "y-major", "z-major"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}



