{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/influence_flags_log.schema.json",
  "title": "Influence Flags Log",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["step_index", "influenced_cell_count", "cells"],
    "properties": {
      "step_index": {
        "type": "integer",
        "minimum": 0
      },
      "influenced_cell_count": {
        "type": "integer",
        "minimum": 0
      },
      "cells": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" },
            "z": { "type": "number" }
          },
          "required": ["x", "y", "z"],
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}



